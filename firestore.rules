rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Kullanıcı sadece kendi öğrenci bilgilerine erişebilir
    match /students/{studentId} {
      allow read, write: if request.auth != null && request.auth.uid == studentId;
      allow create: if request.auth != null && request.auth.uid == studentId;
    }
    
    // Kullanıcı sadece kendi derslerine erişebilir
    match /courses/{courseId} {
      allow read: if request.auth != null;
      allow write, update, delete: if request.auth != null && 
        resource.data.studentId == request.auth.uid;
      allow create: if request.auth != null && 
        request.resource.data.studentId == request.auth.uid;
    }
    
    // Kullanıcı sadece kendi materyallerine erişebilir
    match /materials/{materialId} {
      allow read: if request.auth != null;
      allow write, update, delete: if request.auth != null && 
        resource.data.studentId == request.auth.uid;
      allow create: if request.auth != null && 
        request.resource.data.studentId == request.auth.uid;
    }
    
    // Kullanıcı sadece kendi testlerine erişebilir
    match /tests/{testId} {
      allow read: if request.auth != null;
      allow write, update, delete: if request.auth != null && 
        resource.data.studentId == request.auth.uid;
      allow create: if request.auth != null && 
        request.resource.data.studentId == request.auth.uid;
    }
    
    // Kullanıcı sadece kendi AI analiz cache'ine erişebilir
    match /analysis_cache/{studentId} {
      allow read, write: if request.auth != null && request.auth.uid == studentId;
      allow create: if request.auth != null && request.auth.uid == studentId;
    }
  }
}

